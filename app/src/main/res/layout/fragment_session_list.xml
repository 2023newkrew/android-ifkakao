<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.presentation_session_list.fragment.SessionListFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_far"
            android:paddingTop="@dimen/content_margin_normal"
            android:text="Session"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/content_margin_normal"
            android:background="@color/background_gray" />

        <Button
            android:id="@+id/schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/content_margin_normal"
            android:layout_marginEnd="@dimen/content_margin_near"
            android:background="@drawable/anguler_button"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="전체 일정표 보기"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_xxsmall"
            android:textStyle="bold"
            android:theme="@style/Theme.White" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_near"
            android:background="@android:color/transparent"
            app:tabGravity="start"
            app:tabIndicatorFullWidth="false"
            app:tabPaddingEnd="@dimen/content_margin_near"
            app:tabPaddingStart="@dimen/content_margin_near"
            app:tabSelectedTextColor="@color/text_white"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/text_gray">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12월 7일" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12월 8일" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12월 9일" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_margin_near"
            android:layout_marginTop="@dimen/content_margin_normal"
            android:layout_marginEnd="@dimen/content_margin_near"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/session_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Session"
                android:textColor="@color/text_gray"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_filter" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/session_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/session_margin"
            android:layout_marginTop="@dimen/content_margin_normal"
            android:layout_marginEnd="@dimen/session_margin"
            android:layout_marginBottom="@dimen/content_margin_normal" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
