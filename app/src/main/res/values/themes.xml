<resources>
    <!-- Base application theme. -->
    <style name="Theme.IfKakao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>

        <!-- navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- hamburger icon color -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- window background -->
        <item name="android:windowBackground">@color/black_primary</item>

        <!-- text -->
        <item name="android:textColor">@color/white_title</item>
        <item name="android:textSize">@dimen/text_size_default</item>

        <!-- menu text color -->
        <item name="android:actionMenuTextColor">@color/white_title</item>
    </style>

    <style name="Theme.White" parent="Theme.IfKakao">
        <item name="colorAccent">@color/white_title</item>
        <item name="colorPrimary">@color/white_title</item>
        <item name="colorPrimaryDark">@color/white_title</item>
        <item name="colorPrimaryVariant">@color/white_title</item>
    </style>

    <style name="Theme.Gray" parent="Theme.IfKakao">
        <item name="colorAccent">@color/gray_background_bright</item>
        <item name="colorPrimary">@color/gray_background_bright</item>
        <item name="colorPrimaryDark">@color/gray_background_bright</item>
        <item name="colorPrimaryVariant">@color/gray_background_bright</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white_title</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationItemTextAppearance" parent="Theme.IfKakao">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextAppearance" parent="Theme.IfKakao">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>