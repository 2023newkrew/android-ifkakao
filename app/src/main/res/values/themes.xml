<resources>
    <!-- Base application theme. -->
    <style name="Theme.IfKakao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_compressed</item>
        <item name="colorPrimaryDark">@color/blue_compressed</item>
        <item name="colorPrimaryVariant">@color/blue_compressed</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- status bar color -->
        <item name="android:statusBarColor">@android:color/white</item>

        <!-- navigation bar color -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- hamburger icon color -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>